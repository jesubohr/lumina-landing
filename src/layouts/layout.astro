---
import "@/styles/global.css"
import Header from "@/components/header.astro"
import Footer from "@/components/footer.astro"

const TITLE = "Lumina"
const SITE_TITLE = `Self-Knowledge App | ${TITLE}`
const SITE_DESCRIPTION =
  "Meet the parts of you that words can't reach. A guided journey into your psyche blending psychology, astrology, and numerology. Start your free 7-day trial today."
const SITE_URL = "https://lumina-landing-two.vercel.app" // Temporal domain
const SITE_KEYWORDS =
  "self-discovery app, psychology app, astrology app, numerology, personal growth, inner journey, meditation app, spiritual growth, emotional resonance, archetypal psychology, daily ritual, mindfulness"
---

<!doctype html>
<html lang="en" class="motion-safe:scroll-smooth motion-reduce:transition-none">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{SITE_TITLE}</title>
    <meta name="title" content={SITE_TITLE} />
    <meta name="description" content={SITE_DESCRIPTION} />
    <meta name="keywords" content={SITE_KEYWORDS} />
    <link rel="canonical" href={SITE_URL} />

    <!-- Open Graph Meta tags -->
    <meta property="og:title" content={SITE_TITLE} />
    <meta property="og:description" content={SITE_DESCRIPTION} />
    <meta property="og:site_name" content={SITE_TITLE} />
    <meta property="og:image" content={`${SITE_URL}/og-image.webp`} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={SITE_URL} />

    <!-- Schema.org Meta tags -->
    <meta itemprop="name" content={SITE_TITLE} />
    <meta itemprop="url" content={SITE_URL} />
    <meta itemprop="description" content={SITE_DESCRIPTION} />

    <!-- Twitter Meta tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={SITE_TITLE} />
    <meta name="twitter:description" content={SITE_DESCRIPTION} />
    <meta name="twitter:image" content={`${SITE_URL}/og-image.webp`} />
    <meta name="twitter:url" content={SITE_URL} />

    <!-- Mobile Optimization -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content={TITLE} />

    <!-- App Store / Play Store Smart Banners -->
    <meta name="apple-itunes-app" content={`app-id=<APP_ID>, app-argument=${SITE_URL}`} />
    <meta name="google-play-app" content="app-id=<APP_ID>" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#a78bfa" />
    <meta name="msapplication-TileColor" content="#a78bfa" />

    <!-- Additional SEO -->
    <meta name="author" content="Lumina Inc." />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />
    <meta name="language" content="English" />
    <meta name="revisit-after" content="7 days" />

    <!-- Conversion Optimization Tags -->
    <meta name="application-name" content={TITLE} />
    <meta name="msapplication-tooltip" content={SITE_DESCRIPTION} />
    <meta name="msapplication-starturl" content={SITE_URL} />

    <!-- Preconnect for Performance -->
    <!-- <link rel="preconnect" href="ANALYTICS_URL" /> -->

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Schema.org Structured Data for Rich Snippets -->
    <script is:inline type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "MobileApplication",
        "name": "Lumina",
        "operatingSystem": "iOS, Android",
        "applicationCategory": "LifestyleApplication",
        "description": "A guided journey into your psyche blending psychology, astrology, and numerology. Discover your inner compass through archetypal clarity, emotional resonance, and sacred rhythm.",
        "offers": {
          "@type": "Offer",
          "price": "0",
          "priceCurrency": "USD",
          "description": "Free 7-day trial"
        },
        "aggregateRating": {
          "@type": "AggregateRating",
          "ratingValue": "5",
          "ratingCount": "2",
          "bestRating": "5",
          "worstRating": "1"
        },
        "review": [
          {
            "@type": "Review",
            "author": {
              "@type": "Person",
              "name": "The Introspective"
            },
            "reviewRating": {
              "@type": "Rating",
              "ratingValue": "5"
            },
            "reviewBody": "This app found the words I couldn't speak. It feels like looking into a mirror for the soul. Finally, technology that feels sacred."
          },
          {
            "@type": "Review",
            "author": {
              "@type": "Person",
              "name": "The Seeker"
            },
            "reviewRating": {
              "@type": "Rating",
              "ratingValue": "5"
            },
            "reviewBody": "A space that respects the mystery of self-discovery without the fluff. It's become my morning coffee for the spirit."
          }
        ]
      }
    </script>

    <!-- Organization Schema -->
    <script is:inline type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Lumina Inc.",
        "url": "https://www.lumina.app",
        "logo": "https://www.lumina.app/logo.png",
        "sameAs": ["https://www.facebook.com/luminaapp", "https://www.instagram.com/luminaapp", "https://twitter.com/luminaapp"]
      }
    </script>

    <!-- Dark Mode Support -->
    <script is:inline>
      const hasMatchMedia = typeof window.matchMedia !== "undefined"
      if (hasMatchMedia && window.matchMedia("(prefers-color-scheme: dark)").matches) {
        document.documentElement.classList.add("dark")
      }

      window.matchMedia("(prefers-color-scheme: dark)").addEventListener("change", (event) => {
        if (event.matches) {
          document.documentElement.classList.add("dark")
        } else {
          document.documentElement.classList.remove("dark")
        }
      })
    </script>
  </head>

  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
